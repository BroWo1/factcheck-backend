# Environment Variables
DJANGO_SECRET_KEY=your-secret-key-here
DEBUG=True

# API Keys
OPENAI_API_KEY=your-openai-api-key-here
GOOGLE_SEARCH_API_KEY=your-google-search-api-key-here
# Web Search Configuration (for ChatGPT web search tool)
USE_WEB_SEARCH=false
WEB_SEARCH_CONTEXT_SIZE=medium
WEB_SEARCH_COUNTRY=US
WEB_SEARCH_CITY=
WEB_SEARCH_REGION=
WEB_SEARCH_TIMEZONE=America/New_York

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Database Configuration (optional - defaults to SQLite)
# DATABASE_URL=postgresql://user:password@localhost:5432/factcheck_db

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging
LOG_LEVEL=INFO
